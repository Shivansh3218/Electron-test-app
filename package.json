{
  "name": "electron-test",
  "version": "1.0.3",
  "description": "Electron test application with auto-updates",
  "author": "Shivansh",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win",
    "deploy": "electron-builder build --win --publish always",
    "publish": "electron-builder build --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shivansh3218/Electron-test-app.git"
  },
  "build": {
    "appId": "com.shivansh.electron-test",
    "productName": "Electron Test",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Shivansh3218",
        "repo": "Electron-test-app"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Electron Test",
      "uninstallDisplayName": "Electron Test"
    }
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
